.col-md-8
  %h4 Individual buildings

  %table.table.table-striped
    %thead
      %tr
        %th Building name
        %th Address
        %th Building group
    %tbody
      - @buildings.each do |building|
        %tr{ data: { longitude: building.longitude, latitude: building.latitude } }
          %td= link_to building.name, edit_building_path(building)
          %td= building.address
          %td= building.group_name

  %h4 Aggregated Groups

  %table.table.table-striped
    %thead
      %tr
        %th Group name
        %th Sector
        %th Location details
    %tbody
      - @building_groups.each do |building_group|
        %tr{ :"data-longitude" => building_group.longitude, :"data-latitude" => building_group.latitude }
          %td= link_to building_group.name, edit_building_group_path(building_group)
          %td
            = building_group.sector
            = building_group.category == "all" ? "" : "(#{building_group.category})"
          %td
            = building_group.location_scope
.col-md-4
  #map

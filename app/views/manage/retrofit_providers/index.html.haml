.col-md-8
  .btn-group
    %button.btn.btn-primary.dropdown-toggle{ type: "button", :"data-toggle" => "dropdown" }
      Retrofit Providers
      %span.caret
    %ul.dropdown-menu{ role: "menu" }
      %li
        = link_to "Community Groups", manage_community_groups_path
      %li
        = link_to "Housing Providers", manage_housing_providers_path
      %li
        = link_to "Retrofit Providers", manage_retrofit_providers_path

  %table.table.table-striped
    %thead
      %tr
        %th Group name
        %th Address/location
        %th Contact
    %tbody
      - @retrofit_providers.each do |retrofit_provider|
        %tr
          %td= retrofit_provider.name
          %td= retrofit_provider.location
          %td= retrofit_provider.buildings.count
          %td
            = mail_to retrofit_provider.email, retrofit_provider.name_or_email

.col-md-4

  %img.img-thumbnail{ src: "http://placehold.it/512x512" }



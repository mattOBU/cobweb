%tr
  %td= member.name
  %td
    - if (current_user.has_role? :community_group_administrator, @community_group) && (current_user != member)
      .btn-group
        %button.btn.btn-default.btn-sm.dropdown-toggle{ type: "button", :"data-toggle" => "dropdown"}
          %i.glyphicon.glyphicon-pencil
          = member.role_for @community_group
          %span.caret
        %ul.dropdown-menu{ role: "menu" }
          %li
            %a{ href: "#" } Member
          %li
            %a{ href: "#" } Admin
          %li.divider
          %li
            %a{ href: "#" }
              %i.glyphicon.glyphicon-trash
              Remove
    - else
      = member.role_for @community_group

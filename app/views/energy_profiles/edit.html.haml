.container
  %h2= @building.address

  .row
    .col-md-6
      #granularities.btn-group-vertical{"data-toggle" => "buttons"}
        %label.btn.btn-primary
          = radio_button_tag "granularity", "yearly", false, { "data-target" => ".yearly-data", "data-toggle" => "tab" }
          Yearly
        %label.btn.btn-primary
          = radio_button_tag "granularity", "quarterly", false, { "data-target" => ".quarterly-data", "data-toggle" => "tab" }
          Quarterly
        %label.btn.btn-primary
          = radio_button_tag "granularity", "monthly", false, { "data-target" => ".monthly-data", "data-toggle" => "tab" }
          Monthly
    .col-md-6
      %em pseudo graphs go here
  .row
    .col-md-2
      .form-group
        = label_tag :year, "Select Year"
    .col-md-2
      .form-group
        = text_field_tag :year, nil, class: "form-control", placeholder: "Year"
  .row
    .col-md-4
      = render partial: "energy_profile", locals: { label: "Select electricity consumption / export", profile_types: ["imported electricity consumption", "generated electricity consumption", "exported electricity"] }
    .col-md-4
      = render partial: "energy_profile", locals: { label: "Select fossil fuel", profile_types: ["natural gas", "oil", "LPG", "anthracite", "wood pellets"] }

#confirm-modal.modal.fade{ tabindex: -1, role: "dialog" }
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{ type: "button", :"data-dismiss" => "modal" } &times;
        %h4#confirm-modal-label.modal-title Unsaved Data!
      .modal-body
        %p
          You have unsaved data on the form.
        %p
          Please choose:
      .modal-footer
        %button.btn.btn-default{ type: "button", :"data-dismiss" => "modal"} Close
        %button.btn.btn-primary{ type: "button"} Save changes
